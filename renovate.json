{
  "extends": [
    "config:base"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "ignorePaths": [
    "projects/ngx-pwa/local-storage/package.json"
  ],
  "packageRules": [
    {
      "packageNames": ["typescript"],
      "allowedVersions": "<4.2"
    },
    {
      "packageNames": ["tslib"],
      "allowedVersions": "<3"
    },
    {
      "packageNames": ["zone.js"],
      "allowedVersions": "<0.12"
    },
    {
      "packageNames": ["@types/node"],
      "allowedVersions": "<15"
    }
  ],
  "schedule": ["after 1am and before 7am every weekday"],
  "timezone": "Europe/Paris",
  "prHourlyLimit": 0
}
